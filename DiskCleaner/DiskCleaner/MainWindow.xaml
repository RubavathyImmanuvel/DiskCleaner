<Window x:Class="DiskCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Disk Cleaner" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Name="ScanButton" Content="Scan" Width="100" Click="ScanButton_Click" Margin="5"/>
            <Button Name="DeleteButton" Content="Delete Selected" Width="100" Click="DeleteButton_Click" Margin="5"/>
        </StackPanel>

        <DataGrid Name="FilesDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" Grid.Row="1" Margin="10">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="50"/>
                <DataGridTextColumn Header="File Path" Binding="{Binding FilePath}" Width="*"/>
                <DataGridTextColumn Header="Size (KB)" Binding="{Binding Size}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Name="StatusTextBlock" Grid.Row="2" HorizontalAlignment="Center" Margin="10"/>
    </Grid>
</Window>